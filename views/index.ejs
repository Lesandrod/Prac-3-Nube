    <br>
  
    <div class="row">
      
      <% data.forEach((row)=> { %>

        <div class="card m-1" style="width: 14rem; ">
          <img src="<%= row.imagen %>" height="220px" class="card-img-top" alt="<%= row.imagen %>">
          <ul class="list-group list-group-flush">



            <li class="list-group-item">Nombre: <%= row.nombre %>
            </li>
            <li class="list-group-item">Apellido: <%= row.apellido %>
            </li>
            <li class="list-group-item">Codigo: <%= row.codigo %>
            </li>
            <li class="list-group-item">Carrera: <%= row.carrera %>
            </li>

          </ul>
          <center>


            <div class="card-body">
              <a class="btn btn-outline-primary" href="/up/<%= row.id %>"><svg xmlns="http://www.w3.org/2000/svg"
                  width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
